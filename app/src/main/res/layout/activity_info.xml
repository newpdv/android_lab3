<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/film_poster"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/film_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/film_poster"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            app:autoSizeMaxTextSize="50sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:text="Film name" />

        <TextView
            android:id="@+id/film_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="5.0" />

        <TextView
            android:id="@+id/film_year_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_rating"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="15sp"
            tools:text="2000, жанр" />

        <TextView
            android:id="@+id/film_country_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_year_genre"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="15sp"
            tools:text="Страна, 2:00" />

        <TextView
            android:id="@+id/film_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_country_duration"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="25dp"
            android:textSize="12sp"
            tools:text="Описание фильма" />

    </RelativeLayout>

</ScrollView>